<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_bbs_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.kunleen.sn.sportnewsapplication.custom.CircleImageView
            android:id="@+id/civ_bbs_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bbs_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="阿不错的附近"
                android:textColor="@color/theme_green"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bbs_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="阿不错的附近"
                android:textColor="@color/font_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bbs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="U23亚洲杯"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_bbs_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="U23亚洲杯"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.kunleen.sn.sportnewsapplication.custom.ResizableImageView
        android:id="@+id/iv_bbs_image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:visibility="gone" />

    <com.kunleen.sn.sportnewsapplication.custom.ResizableImageView
        android:id="@+id/iv_bbs_image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:visibility="gone" />

    <com.kunleen.sn.sportnewsapplication.custom.ResizableImageView
        android:id="@+id/iv_bbs_image3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_bbs_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:drawableLeft="@mipmap/icon_xqy_zan1"
            android:drawablePadding="5dp"
            android:text="赞" />

        <TextView
            android:id="@+id/tv_bbs_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_xqy_cai1"
            android:drawablePadding="5dp"
            android:text="赞" />
    </LinearLayout>

    <include
        layout="@layout/view_devide"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:src="@mipmap/icon_xqy_qbpinglun" />
</LinearLayout>
