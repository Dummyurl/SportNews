<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.kunleen.sn.sportnewsapplication.custom.TitleBarView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_headimg"
        style="@style/mimecenterbt"
        android:layout_marginTop="10dp"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="头像"
            android:textColor="@color/black" />

        <com.kunleen.sn.sportnewsapplication.custom.CircleImageView
            android:id="@+id/cir_detail_head"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:padding="3dp"
            android:src="@mipmap/button_head_image"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/button_sz_jiantou" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_city"
        style="@style/mimecenterbt"
        android:layout_marginTop="1dp"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="城市"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="未填写"
            android:textColor="@color/font_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nickname"
        style="@style/mimecenterbt"
        android:layout_marginTop="1dp"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="昵称"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_detail_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="未填写"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/mimecenterbt"
        android:layout_marginTop="1dp"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="手机绑定"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_detail_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:text="未填写"
            android:textColor="@color/black" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/theme_green"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_wheel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.kunleen.sn.sportnewsapplication.custom.wheel.WheelView
            android:id="@+id/id_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.kunleen.sn.sportnewsapplication.custom.wheel.WheelView
            android:id="@+id/id_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_change_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" @drawable/wheel_bg"
        android:gravity="center"
        android:text="确定"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>
